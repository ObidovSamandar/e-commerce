<%- include('./parts/header') %> 
<%- include('./parts/navbar') %> 

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form action="/dashboard" method="POST">
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Unit Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(cartProducts.length!=0) {%>
                                    <% cartProducts = cartProducts.reverse() %> 
                                    <% for(let product of cartProducts){ %> 
                                            <tr>
                                                <td class="product-thumbnail">
                                                    <a href="#">
                                                        <img src="<%=product.backimg%>" alt="item">
                                                    </a>
                                                </td>
                                                <td class="product-name">
                                                    <a href="#"><%=product.proname %></a>
                                                </td>
                                                <td class="product-price">
                                                    <span class="unit-amount">$ <%=product.price%></span>
                                                </td>
                                                <td class="product-quantity">
                                                    <div class="input-counter d-flex">
                                                        <button type="submit" class="minus-btn">
                                                            <i class='bx bx-minus'></i>
                                                        </button>
                                                        <input name="quantity" min="0" type="text" value="<%=product.quantity%>">
                                                        <button type="submit" class="plus-btn">
                                                            <i class='bx bx-plus'></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td class="product-subtotal">
                                                    <span class="subtotal-amount">$ <%=product.price*product.quantity%></span>
                                                    <a href="/dashboard/delete/<%=product.proname%>" class="remove">
                                                        <i class='bx bx-trash'></i>
                                                    </a>
                                                </td>
                                            </tr>
                                    <% } %> 
                                <% } else{%> 
                                   <tr>
                                        <div class="alert alert-danger w-100">
                                            No Products in Cart
                                        </div>
                                   </tr>
                                <% } %> 
                            </tbody>
                        </table>
                    </div>
                    <div class="cart-totals">
                        <h3>Cart Totals</h3>
                        <% let subTotalsum=0; %>
                        <% let shipping=cartProducts.length==0 ? 0 : 30 %>  
                        <% for(let product of cartProducts) {%> 
                            <% subTotalsum+= product.quantity*product.price %> 
                        <% }%> 
                        <ul>
                            <li>Subtotal 
                                <span>$<%=subTotalsum%> </span>
                            </li>
                            <li>Shipping 
                                <span>$ <%= shipping %>  </span>
                            </li>
                            <li>Total 
                                <span><b>$<%= subTotalsum + shipping%> </b></span>
                            </li>
                        </ul>
                        <% if(subTotalsum!=0){%>
                            <a href="/checkout" class="default-btn">
                                Proceed to Checkout
                            </a>
                        <%} %> 
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Cart Area -->

