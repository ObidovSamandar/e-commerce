<%- include('./parts/header') %> 
<%- include('./parts/navbar') %> 

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Unit Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <% if(purchasedProducts.length!=0) {%>
                                <% for(let product of purchasedProducts){ %> 
                                    <tbody>
                                        <tr>
                                            <td><span class="text-primary">Total sum: </span>$<%=product.totalsum %></td>
                                            <% let dateInfo = new Date(product.date) %> 
                                            <td><span class="text-primary">Ordered day:</span><%= dateInfo.getDate()%>/<%= dateInfo.getMonth()+1%>/<%= dateInfo.getFullYear()%>  <%= dateInfo.getHours()%>:<%= dateInfo.getMinutes()%></td>
                                        </tr> 
                                        <% for(let prod of product.products) {%>
                                                <tr>
                                                    <td class="product-thumbnail">
                                                        <a>
                                                            <img src="<%=prod.backimg%>" alt="item">
                                                        </a>
                                                    </td>
                                                    <td class="product-name">
                                                        <a><%=prod.proname %></a>
                                                    </td>
                                                    <td class="product-price">
                                                        <span class="unit-amount">$ <%=prod.price%></span>
                                                    </td>
                                                    <td class="product-quantity">
                                                        <div class="input-counter d-flex">
                                                            <input name="quantity" min="0" type="text" value="<%=prod.quantity%>" disabled>
                                                        </div>
                                                    </td>
                                                    <td class="product-subtotal">
                                                        <span class="subtotal-amount">$ <%=prod.price*prod.quantity%></span>
                                                    </td>
                                                </tr>
                                        <% }%> 
                                    </tbody>
                                <% } %> 
                                <% } else{%> 
                                    <tr>
                                        <div class="alert alert-danger w-100">
                                            No Products in Purchased Cart
                                        </div>
                                    </tr>
                                <% } %> 
                        </table>
                    </div>
            </div>
        </div>
    </div>
</section>
<!-- End Cart Area -->
